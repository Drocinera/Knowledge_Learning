<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Knowledge-Learning{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/course.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/header.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/theme.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/lesson.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/registration.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/footer.css') }}">
     <link rel="stylesheet" href="{{ asset('styles/formation.css') }}">
    
</head>
<body>
    <nav>
        <div class="nav-left">
            <a href="{{ path('home') }}">
                <img src="{{ asset('images/Logo.jpg') }}" alt="Logo" class="logo">
            </a>
        </div>
        <div class="header-nav-right">
            {% if app.user %}
                <!-- User is connected -->
                <a href="{{ path('home') }}" class="{% if app.request.get('_route') == 'home' %}active{% endif %}">
                Accueil
                </a>

            <!-- Menu Formations avec sous-menu déroulant -->
            <div class="dropdown">
                <a href="{{ path('app_formation') }}" class="{% if app.request.get('_route') == 'app_formation' %}active{% endif %}">
                    Formations
                </a>
                <ul class="dropdown-content">
                    {% for formation in formations %}
                        <li><a href="{{ path('app_formation_show', { id: formation.id }) }}">{{ formation.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            
                <a href="{{ path('app_logout') }}">
                    Se déconnecter
                </a>
            {% else %}
                <!-- User is not connected -->
                <a href="{{ path('home') }}" class="{% if app.request.get('_route') == 'home' %}active{% endif %}">
                    Accueil
                </a>

            <!-- Menu Formations avec sous-menu déroulant -->
            <div class="dropdown">
                <a href="{{ path('app_formation') }}" class="{% if app.request.get('_route') == 'app_formation' %}active{% endif %}">
                    Formations
                </a>
                <ul class="dropdown-content">
                    {% for formation in formations %}
                        <li><a href="{{ path('app_formation_show', { id: formation.id }) }}">{{ formation.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>

                <a href="{{ path('app_register') }}" class="{% if app.request.get('_route') == 'app_register' %}active{% endif %}">
                    S'inscrire
                </a>
                <a href="{{ path('app_login') }}" class="{% if app.request.get('_route') == 'app_login' %}active{% endif %}">
                    Se connecter
                </a>
            {% endif %}
        </div>
    </nav>

    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <footer>
    <nav>
        <div class="nav-left">
            <a href="{{ path('home') }}">
                <img src="{{ asset('images/Logo.jpg') }}" alt="Logo" class="logo">
            </a>
        </div>
        <div class="nav-right">
             <a href="{{ path('app_contact') }}" class="{% if app.request.get('_route') == 'app_products' %}active{% endif %}">
                Nous contacter
            </a>
            <a href="{{ path('app_formation') }}" class="{% if app.request.get('_route') == 'app_products' %}active{% endif %}">
                Nos Formations
            </a>
            <a href="{{ path('app_site_map') }}" class="{% if app.request.get('_route') == 'app_products' %}active{% endif %}">
                Plan du site
            </a>
            <a href="{{ path('app_legal_information') }}" class="{% if app.request.get('_route') == 'app_products' %}active{% endif %}">
                Information légal
            </a>
        </div>
    </footer>
</body>
</html>
