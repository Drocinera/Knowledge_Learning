{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>
    <div class="registration_form">
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {'label_attr': {'class': 'label-form'}}) }}
        {{ form_row(registrationForm.plainPassword.first, 
            {'label': 'Mot de passe', 'label_attr': {'class': 'label-form'}}) }}
        {{ form_row(registrationForm.plainPassword.second, 
            {'label': 'Confirmation du mot de passe', 'label_attr': {'class': 'label-form'}}) }}
        {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'label-form'}}) }}

        <button type="submit" class="btn">S'inscrire</button>
    </div>
    {{ form_end(registrationForm) }}

    {% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">{{ message }}</div>
    {% endfor %}
    {% endfor %}

    <div class="goBackRegister">
        <p>
            Déjà inscrit ? 
        <a href="{{ path('app_login') }}">
            Connexion
        </a>
        </p>

        <a href="{{ path('app_home') }}">
            Retour à l'acceuil
        </a>
    </div>
{% endblock %}
