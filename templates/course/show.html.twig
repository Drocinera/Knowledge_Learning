{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block body %}
<div class="cursus-div">
    <div class="cursus-title">
        <h1>{{ course.name }}</h1>
    </div>
    <div class="cursus-lesson-sheet">
        <ul>
            {% for lesson in lessons %}
                <li>
                    <div class="cursus-lesson-card">
                        <h2>{{ lesson.name }}</h2>
                        <a href="{{ path('app_lesson_access', {id: lesson.id}) }}" class="btn btn-primary">
                            Accéder à la leçon
                        </a>
                    </div>
                </li>
            {% else %}
                <p>Aucune leçon disponible pour ce cursus.</p>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
