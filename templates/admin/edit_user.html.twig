{% extends 'base.html.twig' %}

{% block body %}

<form method="post">
    <div class="div-mail-user">
        <label for="email">Email :</label>
        <input type="email" id="email" name="email" value="{{ user.email }}" required>
    </div>

    <div class="div-role-user">
        <label for="role">Rôle :</label>
        <select id="role" name="role">
            {% for role in roles %}
                <option value="{{ role.id }}" {% if user.getRoles() and role.name == user.getRoles()[0] %}selected{% endif %}>
                    {{ role.name }}
                </option>
            {% endfor %}
        </select>
    </div>

    <div class="div-checkbox-user">
        <label for="is_active">Actif :</label>
        <input type="checkbox" id="is_active" name="is_active" {% if user.isActive() %}checked{% endif %}>
    </div>

    <button class="submit-button" type="submit">Mettre à jour</button>
</form>

<div>
    <a href="{{ path('app_admin_users') }}" class="btn btn-primary">Retour a la liste utilisateur</a>
<div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{% endblock %}


